<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent">
	<ListView android:layout_height="0dip"
	          android:layout_width="fill_parent"
	          android:layout_weight="1.0"
	          android:id="@+id/tags_list"/>
	<LinearLayout android:layout_height="wrap_content"
	              android:layout_width="fill_parent">
		<Button android:text="@string/add_tag" android:id="@+id/add_tag"
		        android:layout_width="0dip" android:layout_weight="1.0"
		        android:layout_height="wrap_content"/>
		<Button android:text="@string/ren_tag" android:id="@+id/ren_tag"
		        android:layout_width="0dip" android:layout_weight="1.0"
		        android:layout_height="wrap_content"/>
		<Button android:text="@string/del_tag" android:id="@+id/del_tag"
		        android:layout_width="0dip" android:layout_weight="1.0"
		        android:layout_height="wrap_content"/>
	</LinearLayout>
</LinearLayout>